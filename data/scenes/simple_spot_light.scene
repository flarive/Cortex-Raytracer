# Simple spot light demo

image:
{
    width = 388;
    height = 512;
    maxDepth = 100;
    samplesPerPixel = 50;
    backgroundColor = { r = 0.0; g = 0.0; b = 0.0; };
};

# Configuration of the camera
camera:
{
    aspectRatio = "9:16";
    lookFrom = { x = 26.0; y = 6.0; z = 6.0; };
    lookAt = { x = 0.0; y = 4.0; z = 0.0; };
    upAxis = { x = 0.0; y = 1.0; z = 0.0; };
    fov = 24.0;
};


# Lights in the scene
lights:
{
    spotLights: (
        {
            name = "SpotLight1";
            position = { x = 0.0; y = 6.0; z = 0.0; };
            direction = { x = 0.0; y = 1.0; z = 0.0; };
            cosTotalWidth = 30.0;
            cosFalloffStart = 1.0;
            intensity = 4.0;
            radius = 0.5;
            color = { r = 4.0; g = 4.0; b = 4.0; };
            invisible = false;
        }
    )
}

textures:
{
    solidColor: (
        {
            name = "groud_texture";
            color = { r = 0.65; g = 0.45; b = 0.35; };
        },
        {
            name = "sphere_texture";
            color = { r = 0.65; g = 0.05; b = 0.05; };
        }
    )
}

materials:
{
    lambertian: (
        {
            name = "ground_material";
            texture = "groud_texture";
        },
        {
            name = "sphere_material";
            texture = "groud_texture";
        }
    );
}

# Primitives in the scene
primitives:
{
    # List of spheres
    spheres: (
        {
            name = "Ground"
            position = { x = 0.0; y = -1000.0; z = 0.0; };
            radius = 1000.0;
            material = "ground_material";
        },
        {
            name = "Sphere1"
            position = { x = 0.0; y = 1.2; z = 0.0; };
            radius = 1.2;
            material = "sphere_material";
        },
        {
            name = "Sphere2"
            position = { x = 0.0; y = 8.0; z = 0.0; };
            radius = 1.2;
            material = "sphere_material";
        }
    );
};