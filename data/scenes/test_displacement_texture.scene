# Displacement map demo

image:
{
    width = 512;
    height = 388;
    maxDepth = 100;
    samplesPerPixel = 50;
    background = 
    {
        color = { r = 0.7; g = 0.8; b = 1.0; };
    };
};

# Configuration of the camera
camera:
{
    aspectRatio = "16:9";
    lookFrom = { x = 0.0; y = 4.0; z = 9.0; };
    lookAt = { x = 0.0; y = 0.0; z = 0.0; };
    upAxis = { x = 0.0; y = 1.0; z = 0.0; };
    fov = 18.0;
};

# Lights in the scene
lights:
{
    omnis: (
        {
            name = "MySphereLight";
            position = { x = 0.0; y = 8.0; z = 5.0; };
            radius = 3.0;
            intensity = 1.0;
            color = { r = 1.0; g = 1.0; b = 1.0; };
            invisible = true;
        }
    )
}

textures:
{
    solidColor: (
        {
            name = "ground_texture";
            color = { r = 0.7; g = 0.8; b = 1.0; };
        },
        {
            name = "test_diffuse_texture";
            color = { r = 0.9; g = 0.5; b = 0.5; };
        },
        {
            name = "test_specular_texture";
            color = { r = 0.2; g = 0.2; b = 0.2; };
        }
    ),
    image: (
        {
            name = "test_image_texture";
            filepath = "../../data/models/displacement1.png";
        }
    ),
    displacement: (
        {
            name = "test_displacement_texture";
            filepath = "../../data/models/displacement1.jpg";
            strength = 10.0;
        }
    );
}

materials:
{
    lambertian: (
        {
            name = "ground_material";
            texture = "ground_texture";
        }
    ),
    phong: (
        {
            name = "test_material";
            diffuseTexture = "test_diffuse_texture";
            #specularTexture = "test_specular_texture";
            #displacementTexture = "test_displacement_texture";
            ambientColor = { r = 0.0; g = 0.0; b = 0.0; };
            shininess = 0.0;
        }
    )
}

# Meshes in the scene
meshes:
{
    obj: (
        {
            name = "MyMesh"
            filepath = "../../data/models/smooth_sphere.obj";
            position = { x = 0.0; y = 0.0; z = 0.0; };
            material = "test_material";
            use_mtl = false;
            use_smoothing = true;
            transform =
            {
                translate = { x = 0.0; y = 0.0; z = 0.0; };
                scale = { x = 1.0; y = 1.0; z = 1.0; };
            };
        }
    );
};