# Teapot mesh demo

image:
{
    width = 512;
    height = 388;
    maxDepth = 100;
    samplesPerPixel = 10;
    background = 
    {
        color = { r = 1.0; g = 1.0; b = 1.0; };
    };
    outputFilePath = "../../data/renders/giantbug_mesh.png";
};

# Configuration of the camera
camera:
{
    aspectRatio = "16:9";
    lookFrom = { x = 0.0; y = 4.0; z = -160.0; };
    lookAt = { x = -160.0; y = 0.0; z = 0.0; };
    upAxis = { x = 0.0; y = 1.0; z = 0.0; };
    fov = 300.0;
};

# Lights in the scene
lights:
{
    omnis: (
        {
            name = "MySphereLight";
            position = { x = 0.0; y = 8.0; z = 5.0; };
            radius = 3.0;
            intensity = 3.0;
            color = { r = 1.0; g = 1.0; b = 1.0; };
            invisible = true;
        }
    )
}

textures:
{
    solidColor: (
        {
            name = "ground_texture";
            color = { r = 0.7; g = 0.8; b = 1.0; };
        },
    ),
    image: (
        {
            name = "teapot_diffuse_texture";
            filepath = "../../data/models/rusted_metal1.jpg";
        }
    )
}

materials:
{
    lambertian: (
        {
            name = "ground_material";
            texture = "ground_texture";
        }
    ),
    phong: (
        {
            name = "teapot_material";
            diffuseTexture = "teapot_diffuse_texture";
            ambientColor = { r = 0.0; g = 0.0; b = 0.0; };
            shininess = 0.9;
        }
    )
}

# Meshes in the scene
meshes:
{
    fbx: (
        {
            name = "MyFbxModel"
            filepath = "../../data/models/teapot.fbx";
            position = { x = 0.0; y = 0.0; z = 0.0; };
            use_cameras = true;
            use_lights = true;
        }
    );
};