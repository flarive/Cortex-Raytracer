# Giantbug mesh demo

image:
{
    width = 512;
    height = 288;
    maxDepth = 100;
    samplesPerPixel = 100;
    background = 
    {
        color = { r = 0.0; g = 0.0; b = 0.0; };
    };
    outputFilePath = "../../data/renders/giantbug_fbx_mesh.png";
};

# Configuration of the camera
camera:
{
    aspectRatio = "16:9";
};


textures:
{
    solidColor: (
        {
            name = "ground_texture";
            color = { r = 0.7; g = 0.8; b = 1.0; };
        },
    )
}

materials:
{
    lambertian: (
        {
            name = "ground_material";
            texture = "ground_texture";
        }
    )
}

# Meshes in the scene
meshes:
{
    fbx: (
        {
            name = "MyFbxModel"
            filepath = "../../data/models/giantbug.fbx";
            position = { x = 0.0; y = 0.0; z = 0.0; };
            use_cameras = true;
            use_lights = true;
        }
    );
};

# Primitives in the scene
primitives:
{
    # List of boxes
    boxes: (
        {
            name = "MyGround";
            position = { x = 0.0; y = -10.0; z = 0.0; };
            size = { x = 340.0; y = 0.5; z = 340.0; };
            material = "ground_material";
            uvmapping = { scale_u = 1.0; scale_v = 1.0; offset_u = 0.0; offset_v = 0.0; repeat_u = 2.0; repeat_v = 2.0; };
            active = false;
        }
    );
};